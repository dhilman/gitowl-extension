{
  "name": "gitowl-extension",
  "version": "0.2.5",
  "private": true,
  "type": "module",
  "homepage": "https://gitowl.dev",
  "scripts": {
    "dev": "vite",
    "build:dev": "NODE_ENV=development vite build --mode development",
    "build:watch": "npm run build:dev -- --watch",
    "build:watch:firefox": "BROWSER=firefox npm run build:watch",
    "build": "vite build",
    "build:firefox": "BROWSER=firefox vite build"
  },
  "dependencies": {
    "preact": "^10.22.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.0",
    "@types/chrome": "^0.0.271",
    "@types/node": "^22.5.5",
    "eslint": "^8.57.1",
    "eslint-config-preact": "^1.4.0",
    "typescript": "^5.6.2",
    "vite": "^5.3.3"
  },
  "eslintConfig": {
    "extends": "preact"
  }
}
